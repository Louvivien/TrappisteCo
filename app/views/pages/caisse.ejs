<!DOCTYPE html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="./css/style.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <script src="https://code.jquery.com/jquery-3.4.1.min.js" integrity="sha256-CSXorXvZcTkaix6Yvo6HppcZGetbYMGWSFlBw8HfCJo=" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
    <title>T&C. Caisse</title>
  </head>

  <%- include('../partials/menu', {role : role }) %> 

  <!-- Table -->
<div class="card">
    <h3 class="card-header text-center font-weight-bold text-uppercase py-4">Caisse</h3>
    <div class="card-body">
      <div id="table" class="table-editable">
        <button type="button" class="btn btn-info add-new float-right mb-2"><i class="fa fa-plus"></i>Ajouter ligne</button>
        <span class="table-add float-right mb-3 mr-2"><a href="#!" class="text-success"><i
              class="fas fa-plus fa-2x" aria-hidden="true"></i></a></span>
              
        <table class="table table-bordered table-responsive-md table-striped text-center">
          <thead class="thead-dark">
            <tr>
              <th class="text-center">Produit</th>
              <th class="text-center">Code barre</th>
              <th class="text-center">Prix unitaire €</th>
              <th class="text-center">Quantité</th>
              <th class="text-center">Total €</th>
              <th class="text-center">Actions</th>
            </tr>
          </thead>
          <tbody>
          </tbody>
        </table>

        <!-- Validation de commande -->
      
          <div style="height:70px">
            <span  class="btn  ml-3" id="reduction" style="float:right;width:115px;background:#343a40;color:white;cursor:unset" >Prix Total</span> 
            <input type="text" id="totalPrix" value="" class="form-control " style="float:right;width:100px">
          </div>
         
           <div style="height:50px">
            <button type="button" class="btn btn-info mb-2 ml-3" id="reduction" style="float:right;width:115px" >Valider</button>
            <input type="text" class="form-control" id="reductionBarcode" style="float:right;width:300px"  placeholder="code barre de réduction">
          </div>

        <button id="validation" type="button" class="btn btn-dark btn-lg btn-block">Valider la commande</button>
      </div>
    </div>
  </div>

  <!-- Script d'Actions-->
<script type="text/javascript">
$(document).ready(function(){
  $('[data-toggle="tooltip"]').tooltip();
  var actions = '<a class="add" title="Add" data-toggle="tooltip"><i class="material-icons">&#xE03B;</i></a> '+ 
                '<a class="edit" title="Edit" data-toggle="tooltip"><i class="material-icons">&#xE254;</i></a>' +
                '<a class="delete" title="Delete" data-toggle="tooltip"><i class="material-icons">&#xE872;</i></a>';

  // Fonctions du boutton ajouter ligne
    $(".add-new").click(function(){
    $(this).attr("disabled", "disabled");
    var index = $("table tbody tr:last-child").index();
        var row = '<tr>' +
            '<td><input type="text" class="form-control" name="produit" id="produit" disabled=disabled></td>' +
            '<td><input type="text" class="form-control" name="identifiant" id="identifiant"></td>' +
            '<td><input type="text" class="form-control" name="prixunitaire" id="prixunitaire" disabled=disabled></td>' +
            '<td><input type="text" class="form-control" name="quantite" id="quantite" value="1" ></td>' +
            '<td><input type="text" class="form-control" name="total" id="total" disabled=disabled></td>' +
            '<td>' + actions + '</td>' +
            '</tr>';
      $("table").append(row);		
    $("table tbody tr").eq(index + 1).find(".edit").toggle();
        $('[data-toggle="tooltip"]').tooltip();
    });
  $(document).on("click", ".add", function(){
    var empty = false;
    var input = $(this).parents("tr").find('input[type="text"]');
        input.each(function(){
          if(!$(this).val()){
            $(this).addClass("error");
            empty = false;
          } else{
            $(this).removeClass("error");
          }
    });
    $(this).parents("tr").find(".error").first().focus();
    if(!empty){
      let barcode = $(this).parents("tr").find("td:nth-child(2) input").val()
      let quantite = $(this).parents("tr").find("td:nth-child(4) input").val()
     
      let el = this
      $.post("/getProductInfo", {'barcode' : barcode }, function( datas ) {
        let infos = [datas.bieresStock[0].Record.nom,  datas.bieresStock[0].Record.codebarre, datas.bieresStock[0].Record.prix, quantite, parseFloat(parseInt(quantite) * parseFloat(datas.bieresStock[0].Record.prix)).toFixed(2) ]
        
        input.each(function(idx){
          if(idx ==0){
            $(this).parent("td").attr("biereid", datas.bieresStock[0].Record.id)
            $(this).parent("td").attr("quantity", quantite)
          }
          $(this).parent("td").html(infos[idx]);
        })
        $(el).parents("tr").find(".add, .edit").toggle();
        $(".add-new").removeAttr("disabled");
        let total = 0;
        $(el).parents("table").find("tbody tr").each(function(){
         
         total +=  parseFloat($(this).find("td:nth-child(5)").html())
        
        })
        $(document).find('#totalPrix').val(total+ '€')
      });
    }		
    });

    $(document).on("click", "#reduction", () => {
      let barcode = $(document).find("input#reductionBarcode").val()
      $.post("/reduction", {'barcode' : barcode}, (reductionPrix) => { 
        // A FAIRE
            })
    })
    $(document).on("click", "#validation", () => {
      let keys = []
      $(document).find("table tbody tr").each(()=>{
        let $td = $(this).find("td:first-child")
        keys.push([$td.attr('biereid'), $td.attr('quantity')])
      })
      console.log(keys)
      $.post("/validation", {'commande' : keys}, () => {

      })
    })

  // Fonction d'édition
  $(document).on("click", ".edit", function(){		
      $(this).parents("tr").find("td:not(:last-child)").each(function(idx){
       
        if(idx == 0 || idx == 2 || idx == 4 )
          $(this).html('<input  type="text" class="form-control" disabled=disabled value="' + $(this).text() + '">');
        else
          $(this).html('<input  type="text" class="form-control" value="' + $(this).text() + '">');
      });	

   


      $(this).parents("tr").find(".add, .edit").toggle();
      $(".add-new").attr("disabled", "disabled");
    });

  // De suppression
  $(document).on("click", ".delete", function(){
    $(document).find(".tooltip.fade.bs-tooltip-top.show, .tooltip.bs-tooltip-top.show").remove();
    $(document).find(".tooltip.fade.bs-tooltip-top.show").remove();
        $(this).parents("tr").remove();
    $(".add-new").removeAttr("disabled");
    });
});
</script>